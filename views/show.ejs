<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui blue huge header"><%= blog.title %></div>
	<div class="ui top attached segment">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<a href="/blogs/<%= blog._id %>/edit"><button class="ui inverted green button">EDIT</button></a>
			<form id="delete-form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				<button class="ui inverted red button">DELETE</button>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer") %>